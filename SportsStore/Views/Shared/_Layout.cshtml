<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SportsStore</title>
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/**/*.min.css"
          asp-fallback-href-exclude="**/*-reboot*,**/*-grid*"/> 
    <link rel="stylesheet"
          asp-href-include="/lib/fontawesome/css/*.min.css" />
</head>
<body>
    <div class="navbar navbar-inverse bg-inverse" role="navigation">
        <a class="navbar-brand" href="#">SPORTS STORE</a>
        <div class="col-12 text-right">
            @await Component.InvokeAsync("CartSummary")
        </div>
    </div>

    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
    <div>
        <footer class="card-footer">
            Clike <a href="https://jeong-sportsstore.azurewebsites.net/admin/index">here</a> to test Admin Page<br />
            Copyright &copy; 2019 Haeun Jeong
        </footer>
    </div>
</body>
</html>
